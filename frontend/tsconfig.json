{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "dom",
      "es2020"
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "*"
      ],
      "@/app/*": [
        "app/*",
        "src/app/*"
      ],
      "@/components/*": [
        "components/*",
        "src/components/*"
      ],
      "@/lib/*": [
        "src/lib/*",
        "lib/*"
      ],
      "@/state/*": [
        "src/state/*",
        "state/*"
      ],
      "@/plugins/*": [
        "src/plugins/*",
        "plugins/*"
      ]
    },
    "types": [
      "vitest",
      "node"
    ],
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
